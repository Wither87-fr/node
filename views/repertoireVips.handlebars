<h1>{{> letterList}}</h1>
{{#if vips}}
    <div style="display : flex; flex-wrap : wrap; justify-content : space-around;">
        {{#each vips}}
            <div style="display : flex; flex-direction : column; margin-top : 50px;">
                <img width="150px" height="200px" style="object-fit: cover;" src="/images/vip/{{this.PHOTO_ADRESSE}}" alt="Photo de {{this.VIP_PRENOM}} {{this.VIP_NOM}}" />
                <a href="/repertoire/{{this.firstLett}}/{{this.VIP_NUM}}">{{this.VIP_PRENOM}} {{this.VIP_NOM}}</a>
            </div>
        {{/each}}
    </div>
{{/if}}
{{#if vipInfos}}
    <div class="float">
        <img src="/images/vip/{{vipInfos.PHOTO_ADRESSE}}" alt="Photo de {{vipInfos.VIP_PRENOM}} {{vipInfos.VIP_NOM}}" class="float"/>
        <div class="float">
            <p><b>Nom : </b> {{vipInfos.VIP_PRENOM}} {{vipInfos.VIP_NOM}}</p>
            <p><b>Date de naissance : </b>{{formatDate vipInfos.date_naissance "dddd D MMMM yyyy"}}</p>
            <p><b>Nationalit√© : </b>{{vipInfos.Nationalite}}</p>
            {{#if professions}}
                {{#each professions}}
                    <p><b>Profession : </b>{{this.pro_nom}}</p>
                    <p><b>Principal(aux) {{this.pro_action}}(s) : </b>{{#ifCond this.pro_principal '===' "film"}}
                        {{#each ../films}}
                            {{this.FILM_TITRE}} ({{formatDate this.FILMDATEREALISATION "MMMM yyyy"}}) De <a href="{{this.real_num}}">{{this.real_pre}} {{this.real_nom}}</a> <br/>
                        {{/each}}
                    {{/ifCond}}
                    {{#ifCond this.pro_principal '===' "defile"}}
                        {{#each  ../defile}}
                            {{this.DEFILE_LIEU}} ({{formatDate this.DEFILE_DATE "MMMM yyyy"}}) de <a href="{{this.cout_num}}">{{this.cout_pre}} {{this.cout_nom}}</a> <br/>
                        {{/each}}
                    {{/ifCond}}
                    </p>
                {{/each}}
            {{/if}}
            {{#if mariages}}
                {{#each mariages}}
                    <!-- TODO : mariage -->
                {{/each}}
            {{/if}}
            {{#if liaisons}}
                {{#each liaisons}}
                    <!-- TODO : liaisons -->
                {{/each}}
            {{/if}}
            <p><b>Qui suis-je ? : </b>{{vipInfos.VIP_TEXTE}}</p>
            {{#if images}}
                {{#each images}}
                    <!-- TODO : images -->
                {{/each}}
            {{/if}}
        </div>
    </div>
{{/if}}


